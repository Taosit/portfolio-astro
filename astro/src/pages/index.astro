---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Home from "../components/Home.astro";
import ProjectSection from "../components/ProjectSection.astro";
import { ContactSection } from "../components/ContactSection";
---

<Layout title="Welcome to Astro.">
  <Navbar />
  <main>
    <Home />
    <ProjectSection />
    <ContactSection client:visible />
  </main>
</Layout>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Merriweather:wght@700;900&family=Poppins:wght@400;500;600;700&display=swap");

  /* --------------CSS reset-------------- */

  * {
    box-sizing: border-box;
    max-width: 100%;
    /* border: 1px solid red; */
  }

  html,
  body,
  div,
  span,
  applet,
  object,
  iframe,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p,
  blockquote,
  pre,
  a,
  abbr,
  acronym,
  address,
  big,
  cite,
  code,
  del,
  dfn,
  em,
  img,
  ins,
  kbd,
  q,
  s,
  samp,
  small,
  strike,
  strong,
  sub,
  sup,
  tt,
  var,
  b,
  u,
  i,
  center,
  dl,
  dt,
  dd,
  ol,
  ul,
  li,
  fieldset,
  form,
  label,
  legend,
  table,
  caption,
  tbody,
  tfoot,
  thead,
  tr,
  th,
  td,
  article,
  aside,
  canvas,
  details,
  embed,
  figure,
  figcaption,
  footer,
  header,
  hgroup,
  menu,
  nav,
  output,
  ruby,
  section,
  summary,
  time,
  mark,
  audio,
  video {
    margin: 0;
    padding: 0;
    border: 0;
    font-size: 100%;
    text-decoration: none;
    color: black;
    font: inherit;
    vertical-align: baseline;
  }
  body {
    line-height: 1;
  }
  ol,
  ul {
    list-style: none;
  }
  blockquote,
  q {
    quotes: none;
  }
  blockquote:before,
  blockquote:after,
  q:before,
  q:after {
    content: "";
    content: none;
  }
  table {
    border-collapse: collapse;
    border-spacing: 0;
  }

  /* -------------Variables------------ */

  :root {
    --dark-gray: #3e3a33;
    --light-gray: #c3c1ba;
  }

  /* -------------Global------------ */

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    background-color: var(--dark-gray);
    overflow-x: hidden;
  }

  main {
    width: 90%;
    margin: 0 auto;
  }

  h1,
  h2 {
    font-weight: bold;
    font-family: Merriweather;
    color: white;
    letter-spacing: 2px;
  }

  h1 {
    font-size: min(10vw, 5vh, 5rem);
  }

  h3 {
    font-weight: 700;
    color: black;
  }

  h3,
  h4,
  p,
  label,
  a,
  li,
  input,
  textarea {
    font-family: Poppins;
  }

  .page {
    height: 100vh;
    padding-top: 3em;
    margin: 0 auto;
    position: relative;
  }

  .intro {
    background-image: url("data:image/svg+xml,%3csvg width='100%25' height='100%25' xmlns='http://www.w3.org/2000/svg'%3e%3crect width='100%25' height='100%25' fill='none' rx='30' ry='30' stroke='silver' stroke-width='4' stroke-dasharray='1%2c 7%2c 10%2c 10' stroke-dashoffset='0' stroke-linecap='square'/%3e%3c/svg%3e"),
      linear-gradient(#3e3a33bd, #3e3a33bd);
    border-radius: 30px;
    padding: 1.5em 1.2em;
    line-height: 1.5;
  }

  .intro p {
    color: #e1e1e1;
    font-size: 16px;
  }

  .h2-container {
    font-size: min(8vw, 3em);
    margin-top: 6vh;
    margin-bottom: 3vh;
    display: flex;
    align-items: flex-end;
    gap: 0.6em;
  }

  .h2-icon {
    width: 1.5em;
    user-select: none;
  }

  .hidden {
    display: none !important;
  }

  @media (min-width: 768px) and (orientation: portrait) {
    .intro {
      padding: 2em 1.5em;
    }
    .intro p {
      font-size: 20px;
      line-height: 1.3;
    }
  }

  @media (min-width: 768px) {
    main {
      width: min(80%, 1200px);
    }
  }

  @media (min-width: 1024px) {
    .intro {
      padding: 2em 1.5em;
    }
    .intro p {
      font-size: 20px;
      line-height: 1.3;
    }
  }
</style>

